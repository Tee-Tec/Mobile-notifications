fun main() {
    val morningNotification = 51
    val eveningNotification = 135
    
    printNotificationSummary(morningNotification)
    printNotificationSummary(eveningNotification)
}


fun printNotificationSummary(numberOfMessages: Int) {
    var morningNotification = 51
    var eveningNotification = 135
    
    when (morningNotification) {
        in 0..100 -> println("You have $morningNotification notifications.")
        else -> println("Your phone is blowing up! You have 99+ notifications.")
    }
    when (eveningNotification) {
        in 0..100 -> println("You have $eveningNotification notifications.")
        else -> println("Your phone is blowing up! You have 99+ notifications.")
    } 
}
